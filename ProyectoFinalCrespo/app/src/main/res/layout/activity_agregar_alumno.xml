<?xml version="1.0" encoding="utf-8"?>
<android.support.constraint.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="#71C3F3"
    tools:context=".AgregarAlumno">

    <TextView
        android:id="@+id/tituloAgregaAlumno"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginStart="8dp"
        android:layout_marginLeft="8dp"
        android:layout_marginTop="8dp"
        android:layout_marginEnd="8dp"
        android:layout_marginRight="8dp"
        android:layout_marginBottom="8dp"
        android:fontFamily="@font/fragmentcore"
        android:gravity="center"
        android:text="@string/tituloAgregaAlumno"
        android:textColor="@color/colorPrimary"
        android:textSize="30dp"
        app:layout_constraintBottom_toTopOf="@+id/nombre_alumno"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintVertical_bias="0.492" />

    <EditText
        android:id="@+id/nombre_alumno"
        android:layout_width="273dp"
        android:layout_height="42dp"
        android:layout_marginStart="8dp"
        android:layout_marginLeft="8dp"
        android:layout_marginEnd="8dp"
        android:layout_marginRight="8dp"
        android:layout_marginBottom="28dp"
        android:fontFamily="@font/fragmentcore"
        android:hint="@string/nombre_alumno"
        android:inputType="text"
        android:textColor="@color/colorWhite"
        android:textColorHighlight="#B5AFAC"
        android:textColorHint="@color/colorWhite"
        android:textSize="20sp"

        android:theme="@style/AppTheme"
        app:layout_constraintBottom_toTopOf="@+id/apellido_alumno"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent" />

    <EditText
        android:id="@+id/apellido_alumno"
        android:layout_width="273dp"
        android:layout_height="42dp"
        android:layout_marginStart="8dp"
        android:layout_marginLeft="8dp"
        android:layout_marginEnd="8dp"
        android:layout_marginRight="8dp"
        android:layout_marginBottom="24dp"
        android:fontFamily="@font/fragmentcore"
        android:hint="@string/apellido_alumno"
        android:inputType="text"

        android:textColor="@color/colorWhite"
        android:textColorHighlight="#B5AFAC"
        android:textColorHint="@color/colorWhite"
        android:textSize="20sp"
        android:theme="@style/AppTheme"
        app:layout_constraintBottom_toTopOf="@+id/dni_alumno"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent" />

    <EditText
        android:id="@+id/dni_alumno"
        android:layout_width="273dp"
        android:layout_height="42dp"
        android:layout_marginStart="8dp"
        android:layout_marginLeft="8dp"
        android:layout_marginEnd="8dp"
        android:layout_marginRight="8dp"
        android:layout_marginBottom="28dp"
        android:fontFamily="@font/fragmentcore"
        android:hint="@string/dni_alumno"
        android:inputType="number"
        android:textColor="@color/colorWhite"
        android:textColorHighlight="#B5AFAC"
        android:textColorHint="@color/colorWhite"
        android:textSize="20sp"
        android:theme="@style/AppTheme"
        app:layout_constraintBottom_toTopOf="@+id/domicilio_alumno"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent" />

    <EditText
        android:id="@+id/domicilio_alumno"
        android:layout_width="273dp"
        android:layout_height="42dp"
        android:layout_marginStart="8dp"
        android:layout_marginLeft="8dp"
        android:layout_marginEnd="8dp"
        android:layout_marginRight="8dp"
        android:layout_marginBottom="28dp"
        android:fontFamily="@font/fragmentcore"
        android:hint="@string/domicilio_alumno"
        android:inputType="text"
        android:textColor="@color/colorWhite"
        android:textColorHighlight="#B5AFAC"
        android:textColorHint="@color/colorWhite"
        android:textSize="20sp"
        android:theme="@style/AppTheme"
        app:layout_constraintBottom_toTopOf="@+id/telefono_alumno"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent" />

    <EditText
        android:id="@+id/telefono_alumno"
        android:layout_width="273dp"
        android:layout_height="42dp"
        android:layout_marginStart="8dp"
        android:layout_marginLeft="8dp"
        android:layout_marginEnd="8dp"
        android:layout_marginRight="8dp"
        android:layout_marginBottom="64dp"
        android:fontFamily="@font/fragmentcore"
        android:hint="@string/telefono_alumno"
        android:inputType="number"
        android:textColor="@color/colorWhite"
        android:textColorHighlight="#B5AFAC"
        android:textColorHint="@color/colorWhite"
        android:textSize="20sp"
        android:theme="@style/AppTheme"
        app:layout_constraintBottom_toTopOf="@+id/btn_agregar"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent" />

    <TextView
        android:id="@+id/btn_agregar"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginStart="8dp"
        android:layout_marginLeft="8dp"
        android:layout_marginEnd="8dp"
        android:layout_marginRight="8dp"
        android:layout_marginBottom="60dp"
        android:fontFamily="@font/fragmentcore"
        android:gravity="center"
        android:text="@string/btn_agregar"
        android:textColor="@color/colorPrimary"
        android:textSize="20sp"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent" />


</android.support.constraint.ConstraintLayout>